{{>layout/header}}
<div class="col-md-12">
    <h3 class="header">Login Page</h3>
    <div class="col-md-4">
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="id">ID:</label>
                <input id="id" type="text" class="form-control" name="username" placeholder="username" autofocus/>
            </div>
            <div class="form-group">
                <label for="passwd">Password:</label>
                <input id="passwd" type="password" class="form-control" name="password" placeholder="password"/>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
<!--        <button type="button" class="btn btn-primary" id="login-btn">Login</button>-->
    </div>
</div>
{{>layout/footer}}