{{>layout/header}}

<div class="col-md-12">
    <h1 class="header">Root Admin Page</h1>
    {{#userName}}

    <div class="row">
        <div class="col-md-6">
            <a href="/staff-add" role="button" class="btn btn-primary">staff add</a>
            <a href="/logout" class="btn btn-info active" role="button">Logout</a>
        </div>
    </div>
    <br>
<!--목록 출력 영역-->
    <table class="table">
        <thead class="thead-strong">
        <tr>
            <th>id</th>
            <th>Name</th>
            <th>Phone</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#staffs}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{phone}}</td>
            </tr>
        {{/staffs}}
        </tbody>
    </table>
    {{/userName}}
    {{^userName}}
        <a href="/login" role="button" class="btn btn-primary">Login</a>
        <a href="/joinform" role="button" class="btn btn-secondary">회원 가입</a>
    {{/userName}}
</div>

{{>layout/footer}}